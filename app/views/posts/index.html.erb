<div class="container-fluid">

  <div class="row title">
    <div class="col-md-12">
      <p class="text-center">All of <%= current_user.name %>'s Posts</p>
    </div>
  </div>

<table>
  <tr>
    <th>Title</th>
    <th>Text</th>
    <th>For</th>
    <th>By</th>
  </tr>

  <% @posts.each do |post| %>
    <tr>
      <td><%= post.title %></td>
      <td><%= post.text %></td>
      <td><%= post.child.name %></td>
      <td><%= current_user.name %></td>
      <td><%= link_to 'Show', post_path(post) %></td>
      <td><%= link_to 'Edit', edit_post_path(post) %></td>
      <td><%= link_to 'Destroy', post_path(post),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>

</div>
