<div class="container-fluid">

  <div class="row title">
    <div class="col-md-12">
      <p class="text-center">All of <%= current_user.name %>'s Posts</p>
    </div>
  </div>

<table class="table-bordered table-hover col-centered">
  <tr>
    <th>Title</th>
    <th>Text</th>
    <th>Event Date</th>
    <th>Child</th>
  </tr>

  <% @posts.each do |post| %>
    <tr>
      <td><%= post.title %></td>
      <td><%= post.text %></td>
      <td class="text-center"><%= post.event_date.strftime("%m/%d/%Y") %></td>
      <td><%= link_to post.child.name, post_path(post) %></td>
      <td><%= link_to 'Edit', edit_post_path(post) %></td>
      <td><%= link_to 'Delete', post_path(post),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>

</div>
