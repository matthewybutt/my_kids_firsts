<h1>All of <%= current_user.name %>'s Posts</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Text</th>
    <th>Child ID</th>
    <th>User</th>
  </tr>

  <% @posts.each do |post| %>
    <tr>
      <td><%= post.title %></td>
      <td><%= post.text %></td>
      <td><%= post.child_id %></td>
      <td><%= current_user.name %></td>
      <td><%= link_to 'Show', post_path(post) %></td>
      <td><%= link_to 'Edit', edit_post_path(post) %></td>
      <td><%= link_to 'Destroy', post_path(post),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>

