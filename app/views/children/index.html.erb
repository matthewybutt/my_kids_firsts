<div class="container-fluid">

  <div class="row title">
    <div class="col-md-12">
      <p class="text-center"><%= current_user.name %>'s Children </p>
    </div>
  </div>

<table>
  <tr>
    <th>Name</th>
    <th>Birthday</th>
  </tr>

     <% @child.each do |child| %>

    <tr>
      <td><%= link_to child.name, child_path(child) %></td>
      <td><%= child.birthday.strftime("%m/%d/%Y") %></td>
      <td><%= link_to 'Select', child_path(child) %></td>

    </tr>
  <% end %>
</table>

<%= link_to 'Add A Child', new_child_path %>

</div>
