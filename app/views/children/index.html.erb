<h1> <%= current_user.name %>'s Child, <%= @child.name %> </h1>

<table>
  <tr>
    <th>Name</th>
    <th>Birthday</th>
  </tr>

    <tr>
      <td><%= @child.name %></td>
      <td><%= @child.birthday %></td>
    </tr>
</table>

<br>

<table>
  <tr>
    <th>Title</th>
    <th>Text</th>
  </tr>

  <% @posts.each do |post| %>

    <tr>
      <td><%= post.title %></td>
      <td><%= post.text %></td>
      <td><%= current_user.name %></td>
    </tr>
  <% end %>

</table>
