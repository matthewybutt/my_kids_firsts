<div class="container-fluid">

  <div class="row title">
    <div class="col-md-12">
      <p class="text-center"> What did <%= @child.name %> do today? </p>
    </div>
  </div>

  <br>
  <div class="row">
    <div class="col-sm-5">
      <div class="post-form col-centered">
        <%= form_for [@child, Post.new] do |f| %>
         <p>
            <%= f.label :title %><br>
            <%= f.text_field :title %>
          </p>

          <p>
            <%= f.label :text %><br>
            <%= f.text_area :text, size: "40x5" %>
          </p>

          <p>
            <%= f.label :event_date %><br>
            <%= f.date_select :event_date, start_year: 1900, end_year: Time.now.year,
                              :order => [:month, :day, :year] %>
          </p>

          <p>
          <%= f.submit %>
        </p>
        <% end %>
      </div>
    </div>

    <div class="col-sm-7">
     <div class="post-table col-centered">
      <table>
        <tr>
          <th><%= "Title" %></th>
          <th><%= "Text" %></th>
          <th><%= sortable "event_date", "Event Date"  %></th>
        </tr>

        <% @posts.each do |post| %>

          <tr>
            <td><%= post.title %></td>
            <td><%= post.text %></td>
            <td class="text-center"><%= post.event_date.strftime("%m/%d/%y") %></td>
            <td><%= link_to 'View', child_post_path(@child, post) %></td>
            <td><%= link_to 'Edit', edit_child_post_path(@child, post) %></td>
            <td><%= link_to 'Delete', child_post_path(@child, post),
                    method: :delete,
                    data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </table>

      <h5> <%= @child.name %> was born on <%= @child.birthday.strftime("%B %d, %Y") %>! </h5>
    </div>
   </div>
  </div>
</div>
